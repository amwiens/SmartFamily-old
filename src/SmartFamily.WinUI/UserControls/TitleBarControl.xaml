<UserControl
    x:Class="SmartFamily.WinUI.UserControls.TitleBarControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SmartFamily.WinUI.UserControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <StackPanel
        Height="32"
        Padding="14,6"
        IsHitTestVisible="True"
        Orientation="Horizontal"
        Spacing="12">

        <!-- App icon -->
        <Image
            Width="16"
            Height="16"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Source="../Assets/Tree.gif" />

        <!-- Title -->
        <StackPanel
            HorizontalAlignment="Left"
            Orientation="Horizontal"
            Spacing="6">
            <TextBlock
                VerticalAlignment="Center"
                FontSize="12"
                Text="Smart Family" />
            <TextBlock
                Margin="0,0,0,1"
                VerticalAlignment="Bottom"
                CharacterSpacing="64"
                FontSize="10"
                FontWeight="Thin"
                Opacity="0.8"
                Text="ALPHA" />
        </StackPanel>
    </StackPanel>
</UserControl>