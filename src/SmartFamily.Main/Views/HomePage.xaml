<UserControl
    x:Class="SmartFamily.Main.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:prism="http://prismlibrary.com/"
    Style="{StaticResource BaseUserControlStyle}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="{StaticResource MediumLeftMargin}"
            Style="{StaticResource PageTitleStyle}"
            Text="Home" />
        <Grid
            Grid.Row="1"
            Margin="{StaticResource MediumLeftRightMargin}"
            Background="{DynamicResource MahApps.Brushes.Gray10}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Grid.RowSpan="2"
                Grid.Column="0"
                Margin="3"
                Padding="5"
                BorderBrush="Black"
                BorderThickness="1">
                <StackPanel Orientation="Vertical">
                    <TextBlock Style="{StaticResource SubtitleTextStyle}" Text="Files" />
                    <ListView x:Name="_recentFiles" ItemsSource="{Binding RecentFiles}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <prism:InvokeCommandAction Command="{Binding MenuFileOpenCommand}" CommandParameter="{Binding SelectedItem, ElementName=_recentFiles}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Border BorderThickness="0,1,0,1">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2"
                                            Text="{Binding FileName}" />

                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2"
                                            Text="{Binding FilePath}" />

                                        <TextBlock
                                            Grid.Row="1"
                                            Grid.Column="2"
                                            Grid.ColumnSpan="2"
                                            Text="{Binding LastOpened}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </Border>

            <Border
                Grid.Row="0"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Margin="3"
                Padding="5"
                BorderBrush="Black"
                BorderThickness="1">
                <TextBlock Style="{StaticResource SubtitleTextStyle}" Text="News" />
            </Border>

            <Border
                Grid.Row="1"
                Grid.Column="1"
                Margin="3"
                Padding="5"
                BorderBrush="Black"
                BorderThickness="1">
                <TextBlock Style="{StaticResource SubtitleTextStyle}" Text="Help" />
            </Border>

            <Border
                Grid.Row="1"
                Grid.Column="2"
                Margin="3"
                Padding="5"
                BorderBrush="Black"
                BorderThickness="1">
                <TextBlock Style="{StaticResource SubtitleTextStyle}" Text="Update" />
            </Border>
        </Grid>
    </Grid>
</UserControl>