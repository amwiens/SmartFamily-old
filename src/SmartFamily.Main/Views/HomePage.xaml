<UserControl
    x:Class="SmartFamily.Main.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SmartFamily.Main.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Style="{StaticResource BaseUserControlStyle}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="{StaticResource MediumLeftMargin}"
            Style="{StaticResource PageTitleStyle}"
            Text="Home" />
        <Grid
            Grid.Row="1"
            Margin="{StaticResource MediumLeftRightMargin}"
            Background="{DynamicResource MahApps.Brushes.Gray10}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Border Margin="3" Padding="5" BorderThickness="1" BorderBrush="Black" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2">
                <TextBlock Text="Files" />
            </Border>

            <Border Margin="3" Padding="5" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" BorderThickness="1" BorderBrush="Black">
                <TextBlock Text="News" />
            </Border>

            <Border Margin="3" Padding="5" Grid.Row="1" Grid.Column="1" BorderThickness="1" BorderBrush="Black">
                <TextBlock Text="Help" />
            </Border>

            <Border Margin="3" Padding="5" Grid.Row="1" Grid.Column="2" BorderThickness="1" BorderBrush="Black">
                <TextBlock Text="Update" />
            </Border>
        </Grid>
    </Grid>
</UserControl>