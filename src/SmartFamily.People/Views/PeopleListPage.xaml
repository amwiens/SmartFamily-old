<UserControl
    x:Class="SmartFamily.People.Views.PeopleListPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <DataGrid
            Margin="{StaticResource SmallLeftRightMargin}"
            AutoGenerateColumns="False"
            CanUserAddRows="False"
            GridLinesVisibility="Horizontal"
            ItemsSource="{Binding Source}"
            KeyboardNavigation.TabNavigation="Once">
            <DataGrid.Columns>
                <!--
                    TODO: Remove this column definitions and define columns for your data.
                    Consider adding header properties to Resources.resw
                -->
                <DataGridTextColumn Binding="{Binding Name}" Header="Name" />
                <DataGridTextColumn Binding="{Binding Sex}" Header="Sex" />
                <DataGridTextColumn Binding="{Binding RecordNumber}" Header="Rec#" />
                <DataGridTextColumn Binding="{Binding GrandmaNumber}" Header="Grandma Number" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>